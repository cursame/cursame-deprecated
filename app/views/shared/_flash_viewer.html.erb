<div id="modal-asset-<%= asset.id %>" class="modal hide viewer" >
  <div class="modal-header">
    <a class="close" data-dismiss="modal" >&times;</a>
    <h3><%= asset.name %></h3>
  </div>
  <div class="modal-body">

    <object classid="clsid:d27cdb6e-ae6d-11cf-96b8-444553540000" width="770" height="500" id="movie_name" align="middle">
      <param name="movie" value="<%= asset.file.url%>"/>
      <!--[if !IE]>-->
      <object type="application/x-shockwave-flash" data="<%= asset.file.url%>" width="770" height="500">
        <param name="movie" value="movie_name.swf"/>
        <!--<![endif]-->
        <a href="http://www.adobe.com/go/getflash">
          <img src="http://www.adobe.com/images/shared/download_buttons/get_flash_player.gif" alt="Get Adobe Flash player"/>
        </a>
        <!--[if !IE]>-->
      </object>
      <!--<![endif]-->
    </object>

  </div>
  <div class="modal-footer">
    <!-- <a href="#" class="btn danger" data-dismiss="modal" ><%= t('close')%></a> -->
	<%= link_to t('download'), asset.file.url , :class =>'btn info'%>
  </div>
</div>