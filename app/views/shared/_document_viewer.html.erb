<div id="modal-asset-<%= asset.id %>" class="modal hide viewer" >
  <div class="modal-header">
    <a class="close" data-dismiss="modal" >&times;</a>
    <h3><%= asset.name %></h3>
  </div>
  <div class="modal-body" >
     <iframe id="viewer" src="http://docs.google.com/gview?url=http://<%=asset.file.url%>"&embedded=true" style="width:760px; height:500px;" frameborder="0"></iframe>
  </div>
  <div class="modal-footer">
    <!-- <a href="#" class="btn danger" data-dismiss="modal" ><%= t('close')%></a> -->
	<%= link_to t('download'), asset.file.url , :class =>'btn info'%>
  </div>
</div>