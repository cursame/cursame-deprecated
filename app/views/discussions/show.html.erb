<%= t('.header') %>

<%= link_to t('.edit'),   edit_discussion_url(@discussion), :id => 'edit_discussion' %>
<% if @discussion.comments.empty? %>
  <%= link_to t('.remove'), discussion_url(@discussion), :id => 'remove_discussion', :method => :delete, :confirm => t('confirm_delete')  %>
<% end %>

<%= @discussion.title %>
<%= @discussion.description %>

<%= render :partial => 'shared/assets_table', :locals => {:record => @discussion} %>
<%= render :partial => 'comments/comments',   :locals => {:commentable => @discussion} %>
<%= render :partial => 'comments/form',       :locals => {:commentable => @discussion} %>
