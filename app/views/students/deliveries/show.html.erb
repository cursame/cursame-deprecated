<div class="modal hide" id="myModal" style="display:none;">
 <div class="modal-header">
   <a class="close" data-dismiss="modal" >×</a>
   <h3>Ingresa la calificación</h3>
   </p>   
 </div>
 <div class="modal-body">
     <%= render :partial => "calificationems/form"%>
</div>
</div>

<div class="container">
  <div class="content">

    <div class="row">
      <div class="span16">
        <ul class="breadcrumb">
          <li><%= link_to("Dashboard", dashboard_path) %> <span class="divider">/</span></li>
          <li><%= link_to("Courses", courses_path) %> <span class="divider">/</span></li>
          <li><%= link_to(@assignment.course.name, course_path(@assignment.course)) %> <span class="divider">/</span></li>
          <li><%= link_to(t('courses.assignments.assignments'), course_assignments_path(@assignment.course)) %> <span class="divider">/</span></li>
          <li><%= link_to @assignment.name, @assignment %> <span class="divider">/</span></li>
          <li class="active"><%= Delivery.model_name.human %> <%= @delivery.user.name %></li>
        </ul>
      </div>
    </div>

    <div class="row">
      <div class="span3">
        <%= render :partial => "courses/course_menu" %>
        <%= render :partial => "courses/members_menu" %>
      </div>

      <div class="span10 assignments">
        <div class="row">
          <div class="span9">
            <h2 class="titles"><%= link_to @assignment.name, @assignment %></h2>
            <div class="public-course"><%= t('assignments.show.course') %>: <%= @assignment.course.name %></div>
          </div>
        </div>

        <div class="row with line">
          <div class="span6 description no-margin">
            <p><%= t('courses.assignments.value') %>: <b><%= @assignment.value %></b> -
            <%= t('courses.assignments.period') %>: <b><%= @assignment.period %></b> -
            <%= t('courses.assignments.date_time') %>: <b><%= l @assignment.due_to, :format => :short %></b></p>
          </div>
        </div>
        
        <div class="row with line">
          <div class="description"><%= t('courses.description') %></div>
          <div class="expander"><p><%= @assignment.description %></p></div>
        </div>

        <div class="row">
          <div class="span6">
            <h3><%= t('.header') %></h3>
            <h4>Por: <%= link_to @delivery.user.name, user_path(@delivery.user) %></h4>
            <blockquote><small><%= t('.delivered') %>: <%= l @delivery.updated_at, :format => :short %></small></blockquote>
            <%= @delivery.content %>
          </div>

          <div class="span3" style="width:170px;">
            <% if @assignment.due_to > DateTime.now and @delivery.user == current_user%>
              <%= link_to t('assignments.show.edit_delivery'), edit_assignment_delivery_path(@assignment), :id => 'edit_delivery', :class => 'btn info right small' %>
            <% end %>
			
			<% if current_user.role == 'teacher' %>
                 <div class="btn"  data-toggle="modal" href="#myModal">Calificar Tarea</div>
            <% end %>
               
         
            </div>
        </div>

        <%= render :partial => 'shared/assets_table', :locals => {:record => @delivery} %>

        <div class="actions">
          <h2><%= t('.comment') %></h2>
          <%= render :partial => 'comments/form', :locals => {:commentable => @delivery} %>
        </div>

        <div id="delivery_comments">
          <div class="page">
            <%= render :partial => 'comments/comments', :locals => {:commentable => @delivery, :comments => @comments} %>
          </div>
        </div>
        

      </div>

    </div>

  </div>

</div>


