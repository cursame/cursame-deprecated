<%= form.semantic_fields_for :survey_answers do |fields| %>
  <% question = fields.object.question %>
  <%= form.inputs :survey_answer do %>
    <%= fields.input :answer_uuid, :as => :radio, 
      :collection => question.answers.map { |a| [a.text, a.uuid] }, 
      :label => question.text, 
      :disabled => params[:action] == 'show' %>
  <% end %>
<% end %>
