<h1>Existing networks</h1>

<p>
<%= link_to 'New Network', new_admin_network_path %>
</p>

<div class="networks">
<!-- <#% 
	temp = [14,16,138,749,223,1245,956,107,163,46,58,56,14,8,474,24,3526,140,32,145,425,42,1452,153,645,345,2#35,301,728,2571,139]
	i=0
%>-->
  <% @networks.each do |network| %>
    <div class="network">
    <hr />
      <strong>Name:</strong> <%= link_to network.name, admin_network_path(network) %><br/>
      <strong>Subdomain:</strong> <%= network.subdomain %><br />
	  <strong>Created at:</strong> <%= network.created_at.strftime("%m/%d/%Y")  %><br />
      <strong>Students count:</strong> <%= network.users.count %><br />
      <strong>Status:</strong> <%= network.variante %>

      <% @network=network %>
      <%= form_for @network do |ntw|%>
        <%= ntw.select :variante, options_for_select([['Free', 'free'], ['Pro', 'pro']], @network.variante), :class => "btn btn-primary"%>
        <%= ntw.submit "Enviar", :class => "btn btn-primary"%>
      <%end%>

    </div>	
	<div id ="network_users<%= network.id %>"></div>
	<script type="text/javascript" charset="utf-8">
		renderUserGraph('<%= network.name %>','network_users' + <%= network.id %>,
			'Usuarios de la red','Unidades',<%= network.users.count %>, '<%= network.created_at.strftime("%m/%d/%Y")  %>');
	</script>
  <% end %>
</div>
 