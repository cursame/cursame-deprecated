
<h1>Existing networks</h1>

<p>
<%= link_to 'New Network', new_admin_network_path %>
</p>

<div class="networks">
  <% @networks.each do |network| %>
    <div class="network">
    <hr />
      <strong>Name:</strong> <%= link_to network.name, admin_network_path(network) %><br/>
      <strong>Subdomain:</strong> <%= network.subdomain %><br />
      <strong>Users count:</strong> <%= (network.users.count * 15170) / 50 %>	  
    </div>
	<div id ="network_users<%= network.id %>"></div>
	<div id ="network_cursos<%= network.id %>"></div>
	<div id ="network_comentarios<%= network.id %>"></div>
	<script type="text/javascript" charset="utf-8">
		renderGraph('<%= network.name %>','network_users' + <%= network.id %>,'Usuarios de la red','Unidades');
		renderGraph('<%= network.name %>','network_cursos' + <%= network.id %>,'Cursos de la red','Unidades');
		renderGraph('<%= network.name %>','network_comentarios' + <%= network.id %>,'Comentarios de la red','Unidades');
	</script>
  <% end %>
</div>
