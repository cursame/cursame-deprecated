<div class="comment comment-box" id="<%= "comment_#{comment.id}" %>">
  <div class="row">
    <div class="span1"><%= link_to(image_tag(comment.user.avatar_file.xsmall.url), user_path(comment.user)) %></div>
    <div class="span8">
      <h6><%= link_to comment.user.name, user_path(comment.user) %></h6>
      <blockquote>
        <p><%= comment.text %></p>
        <% if comment.assets.any? %>
        <p style="padding-top:10px;">
        <% comment.assets.each do |asset| %>
          <%= image_tag asset.file.thumb_url %>
          <%= link_to asset.name, asset.file.url %><br />
        <% end %>
        </p>
        <% end %>
        <small><%= time_ago_in_words(comment.created_at) %></small>
      </blockquote>
      <p id="<%= "comment_options_#{comment.id}" %>">
        <% if current_user.can_destroy_comment? comment %>
            <%= link_to t('comments.comments.remove'), comment, :method => :delete, :remote => true, :confirm => t('confirm_delete'), :html => {:title => 'delete comment'} %>
            <a href="#">|</a>
        <% end %>
        <% unless Comment === comment.commentable %>
            <%= link_to t('comment'), '#', :class => "toggle_comment_box" %>
        <% end %>
      </p>
    </div>
  </div>
  <div class="comment-comments">
    <%= render :partial => 'comments/comment_comments', :locals => {:commentable => comment} unless comment.comments.blank? %>

    <% unless Comment === comment.commentable %>
        <div class="comment-form"
             <%if comment.comments.empty? %>
                style="display:none;"
             <%end%>
        >
          <div class="comment body" id="<%= "comment_#{comment.id}" %>">
            <%= render :partial => 'comments/comment_form', :locals => {:commentable => comment} %>
          </div>
        </div>
    <% end %>
  </div>
</div>
