<%= semantic_form_for Comment.new, :remote => true, :url => polymorphic_path(commentable, :action => 'comment') do |form| %>
    <%= form.inputs :text do %>
    <%= form.input :text, :input_html => {:rows => 1, :class => "span8"} %>
  <% end %>
  <%= form.buttons do %>
    <%= form.commit_button :button_html => {:id => :submit, :class => "btn right"} %>
  <% end %>
<% end %>