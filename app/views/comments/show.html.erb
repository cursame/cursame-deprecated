<div class="container">
  <div class="content">
    
    <div class="row">
      <div class="span16">
        <ul class="breadcrumb">
          <li><%= link_to("Dashboard", dashboard_path) %> <span class="divider">/</span></li>
          <li><%= link_to("#{@user.first_name} #{@user.last_name}", user_path(@user)) %></li>
        </ul>  
      </div>
    </div>
    
    <div class="row">
      <div class="span3">
        <%= render :partial => "users/profile_menu" %>
      </div>
      <div class="span10 wall">
        <div id="comments">
          <div class="page">
            <%= render :partial => 'comments/comments', :locals => {:comments => [@comment]} %>
          </div>
        </div>
      </div>
      <div class="span3" style="margin:0;">
        <%#= render :partial => "shared/adds" %>
      </div>
    </div>
    
  </div>
  <%= render :partial => "shared/footer" %>
  
</div>

<script type="text/javascript">
  $(function(){
    setupAutoScroll();
  });
</script>
