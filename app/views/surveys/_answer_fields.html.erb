<fieldset class="nested_models answers input no-margin inputs" data-association="answers">
  <legend><%= t('.legend') %></legend>
  <%- form.object.answers.build %>
  <%= form.semantic_fields_for :answers do |answer| %>
    <%- record = answer.object %>
    <fieldset class="<%= record.new_record? ? :new : nil %>">
      <ol>
        <%= answer.input :text %>
        <%= answer.input :_destroy, :as => :boolean %>
      </ol>
    </fieldset>

  <% end %>
  <%= link_to t('courses.add_asset'), '#', :class => 'btn small info add_record', :style => 'display:none' %>
</fieldset>
