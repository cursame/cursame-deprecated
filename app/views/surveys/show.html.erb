<div class="container">
  <div class="content">

    <div class="row">
      <div class="span16">
        <ul class="breadcrumb">
          <li><%= link_to("Dashboard", dashboard_path) %> <span class="divider">/</span></li>
          <li><%= link_to(t('courses.courses'), courses_path) %> <span class="divider">/</span></li>
          <li><%= link_to(@course.name, @course) %> <span class="divider">/</span></li>
          <li><%= link_to(Survey.model_name.human(:count => :many), course_surveys_path(@course)) %> <span class="divider">/</span></li>
          <li class="active"><%= @survey.name %></li>
        </ul>
      </div>
    </div>

    <div class="row">

      <div class="span3">
        <%= render :partial => "courses/course_menu" %>
        <%= render :partial => "courses/members_menu" %>
      </div>

      <div class="span10 surveys">
        <div class="row">
          <div class="span5">
            <h2 class="titles"><%= t('.header') %>: <%= @survey.name %></h2>
            <div class="public-course"><%= t('.course') %>: <%= @course.name %></div>
          </div>
          <div class="span4">
            <% if current_user.manageable_courses.include? @course %>
              <%= link_to t('.edit_survey'), edit_survey_path(@survey), :class => 'btn info right small' %>
            <% end %>
          </div>
        </div>

        <div class="row with line">
          <div class="span6 description no-margin">
            <p><%= t('courses.surveys.value') %>: <b><%= @survey.value %></b> -
            <%= t('courses.surveys.period') %>: <b><%= @survey.period %></b> -
            <%= t('courses.surveys.date_time') %>: <b><%= l @survey.due_to, :format => :short %></b></p>
          </div>
        </div>

        <div class="row with line">
          <div class="description"><%= t('courses.surveys.description') %></div>
          <div class="expander"><p><%= @survey.description %></p></div>
        </div>

        <div class="questions">
          <% if current_user.teacher? %>
            <h2><%= t('.preview') %></h2>
            <%= render :partial => 'question', :collection => @survey.questions %>

          <% elsif @survey_reply %>
            <h3><%= t('.survey_sent') %></h3>
            <p>
              <%= t('.survey_sent_at') %>
              <%= l @survey_reply.updated_at, :format => :short %>
              <%= link_to t('.view_answers'), survey_reply_path(@survey), :class => 'btn info right small' %>
            </p>
          <% elsif @survey.due_to > DateTime.now %>
            <h2><%= t('.not_answered') %></h2>
            <%= link_to t('.new_answers'), new_survey_reply_path(@survey), :class => 'btn info right small' %>
          <% else %>
            <h2><%= t('.survey_expired') %></h2>
           <% end %>

        </div>

      </div>
    </div>
  </div>
</div>
