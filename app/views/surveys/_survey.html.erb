<div class="survey padding-all <%= cycle('odd', 'even') %>">
  <h3><%= link_to survey.name, survey %></h3>
  <%= survey.course.name %>
  <div class="row">
    <div class="survey-values">
      <%= t('.value') %>: <b><%= survey.value %></b> -
      <%= t('.period') %>: <b><%= survey.period %></b> -
      <% if current_user.role_for_course(@course) == 'teacher' %>
        <% if survey.unpublished? %>
          <%= t('.unpublished')%> -
          <%= t('.start_at') %>: <b><%= l survey.start_at, :format => :short %></b>
        <% else %>
          <%= t('.published') %> -
          <%= t('.date_time') %>: <b><%= l survey.due_to, :format => :short %></b>
        <% end %>
      <% else %>
        <%= t('.date_time') %>: <b><%= l survey.due_to, :format => :short %></b> -
        <%= link_to t('.answer'), new_survey_reply_path(survey) unless !current_user.student? %>
      <% end %>
    </div>
  </div>
</div>
