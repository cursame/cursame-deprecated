<div class="container">
  <div class="content">
    
    <div class="row">
      <div class="span16">
        <ul class="breadcrumb">
          <li><%= link_to("Dashboard", dashboard_path) %> <span class="divider">/</span></li>
          <li><%= link_to("#{current_user.first_name} #{current_user.last_name}", current_user) %><span class="divider">/</span></li>
          <li class="active"><%= t("profile.wall") %></li>
        </ul>  
      </div>
    </div>
    
    <div class="row">
      <div class="span3">
        <%= render :partial => "users/profile_menu" %>
      </div>
      
      <div class="span10 wall">
        <div class="actions">
          <%= render :partial => 'comments/form',  :locals => {:commentable => @user} %>
        </div>
        <%= render :partial => 'comments/comments', :locals => {:commentable => @user, :comments => @comments} %>
      </div>
      <div class="span3" style="margin:0;">
        <%= render :partial => "shared/adds" %>
      </div>
    </div>
    
  </div>
</div>
