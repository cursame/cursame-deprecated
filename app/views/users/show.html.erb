<div class="container">
  <div class="content">
    
    <div class="row">
      <div class="span16">
        <ul class="breadcrumb">
          <li><a href="#">Dashboard</a> <span class="divider">/</span></li>
          <li><a href="#">Profiles</a> <span class="divider">/</span></li>
          <li class="active"><%= current_user.first_name %></li>
        </ul>  
      </div>
    </div>
    
    <div class="row">
      <div class="span3">

        <% unless @user.avatar_file.blank? %>
          <%= image_tag @user.avatar_file.small.url %>
        <% end %>

      </div>

      <div class="span10">
        <div class="row">
          <div class="span4">
            <h2><%= @user %></h2>
            <p class="description"><%= @user.role %></p>
          </div>
          <div class="span5" style="margin-left:30px;">
            <% if @user == current_user %>
              <%= link_to t('profile.edit_profile'), edit_user_path(@user), :class => "btn info small right" %>
            <% end %>
          </div>
        </div>
        <div class="section-divider"></div>

        <div class="row bottom-margin">
          <div class="span2 text-right description"><%= t('.about_me') %>:</div>
          <div class="span7"><%= @user.about_me %></div>
        </div>

        <div class="row bottom-margin">
          <div class="span2 text-right description"><%= t('.studies') %>:</div>
          <div class="span7"><%= @user.studies %></div>
        </div>

        <div class="row bottom-margin">
          <div class="span2 text-right description"><%= t('.birth_date') %>:</div>
          <div class="span7"><% if @user.birth_date %><%= l @user.birth_date, :format => :medium %><% end %></div>
        </div>

        <div class="row bottom-margin">
          <div class="span2 text-right description"><%= t('.occupation') %>:</div>
          <div class="span7"><%= @user.occupation %></div>
        </div>

        <div class="row bottom-margin">
          <div class="span2 text-right description"><%= t('.social_networks') %>:</div>
          <div class="span7">
            <p><%= link_to("@#{@user.twitter_link}", "http://twitter.com/#{@user.twitter_link}") %></p>
            <p><%= @user.facebook_link %></p>
            <p><%= @user.linkedin_link %></p>
          </div>
        </div>

      </div>

      <div class="span3" style="margin:0;">
        <%= render :partial => "shared/adds" %>
      </div>
    </div>
  </div>

  <%= render :partial => "shared/footer" %>
</div>
