<div class="container">
  <div class="content">
    <div class="row">
      <div class="span3">

        <% unless @user.avatar_file.blank? %>
          <%= image_tag @user.avatar_file.small.url %>
        <% end %>

        profile partial goes here (or something like that)
      </div>

      <div class="span10">
        <h1><span>[<%= @user.role %>]</span> <%= @user %></h1>

        <% if @user == current_user %>
          <%= link_to t('.edit'), edit_user_path(@user) %>
        <% end %>

        <p>
          <label><%= t('.about_me') %>:</label>
          <%= @user.about_me %>
        </p>

        <p style="clear:both;">
          <label><%= t('.studies') %>:</label>
          <%= @user.studies %>
        </p>

        <p style="clear:both;">
          <label><%= t('.birth_date') %>:</label>
          <%= l @user.birth_date, :format => :medium %>
        </p>

        <p style="clear:both;">
          <label><%= t('.occupation') %>:</label>
          <%= @user.occupation %>
        </p>


        <p style="clear:both;">
          <label><%= t('.social_networks') %>:</label>
          <%= @user.twitter_link %>
          <%= @user.facebook_link %>
          <%= @user.linkedin_link %>
        </p>

      </div>

      <div class="span3" style="margin:0;">
        <p>Something else here</p>
      </div>
    </div>
  </div>

  <%= render :partial => "shared/footer" %>
</div>
