<div class="underline">	
  <ul class="left-nav-main-ul">
    <li>
      <a href="<%= members_for_course_path(@course) %>" class="miembros <%= members_active %>"><%= t('courses.course_menu.members') %>
        <% unless @course.enrollments.where(:state => 'pending').count == 0 %>
          <span class="label-tag notifications tip" title="<%= t('courses.requests.pending_requests')%>"><%= @course.enrollments.where(:state => 'pending').count %></span>
        <% end %>
      </a>
    </li>

  </ul>
  <div class="total-members"><%= t('courses.members.count', :count => @course.users.count) %></div>
  <ul class="nav-member-avatars">
    <% @course.users.each do |user| %>
      <li><%= link_to(image_tag(user.avatar_file.xsmall.url), user_path(user), :rel => "tip", :title => user.name) %></li>
    <% end %>
  </ul>
</div>
