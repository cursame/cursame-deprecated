<div class="container">
  <div class="content">
    
    <div class="row">
      <div class="span16">
        <ul class="breadcrumb">
          <li><%= link_to("Dashboard", dashboard_path) %> <span class="divider">/</span></li>
          <li><%= link_to("Courses", courses_path) %> <span class="divider">/</span></li>
          <li class="active"><%= @course.name %></li>
        </ul>  
      </div>
    </div>
    
    <div class="row">
      <div class="span3">
        <%= render :partial => "course_menu" %>
        <%= render :partial => "members_menu" %>
      </div>
      <div class="span10">
        <div class="row">
          <div class="span7">
            <h2><%= @course.name %></h2>
            <div class="public-course">
              <% if @course.public? %>
                <%= t('courses.public') %>
              <% else %>
                <%= t('courses.private') %>
              <% end %>
            </div>
          </div>
          <div class="span2">
            <% if current_user.manageable_courses.include? @course %>
              <%= link_to("Edit Course", edit_course_path(@course), :class => "btn info small right") %>
            <% end %>
          </div>
        </div>
        
        <div class="row with line">
          <div class="span2 description no-margin"><%= t('courses.time') %></div>
          <div class="span6"><p><%= l @course.start_date, :format => :medium %> - <%= l @course.finish_date, :format => :medium %></p></div>
        </div>
        <div class="row with line">
          <div class="description"><%= t('courses.description') %></div>
          <div class="expander"><p><%= @course.description %></p></div>
        </div>
        <div class="row with">
          <div class="description"><%= t('courses.details') %></div>
          <p><%= @course.reference %></p>
        </div>
        
        <div class="section-divider"><h3><%= t('courses.archives') %></h3></div>

        <% unless @course.assets.empty? %>
          <%= render :partial => 'shared/assets_table', :locals => {:record => @course} %>
        <% else %>
          <p>No hay archivos del curso.</p>
        <% end %>

      </div>
      <div class="span3" style="margin:0;">
        <%= render :partial => "shared/adds" %>
      </div>
    </div>
  </div>
  <%= render :partial => "shared/footer" %>
</div>
