<div class="container">
  <div class="content">
    <div class="row">
      <img src="<%= @course.logo_file.small.url %>"/>
      <div class="span3">
        <%= render :partial => "course_menu" %>
      </div>
      <div class="span10">
        <h2><%= @course.name %></h2>
        <div class="public-course">
          <% if @course.public? %>
            <%= t('courses.public') %>
          <% else %>
            <%= t('courses.private') %>
          <% end %>
        </div>
        <div class="row with line">
          <div class="span2 description no-margin"><%= t('courses.time') %></div>
          <div class="span6"><p><%= l @course.start_date, :format => :medium %> - <%= l @course.finish_date, :format => :medium %></p></div>
        </div>
        <div class="row with line">
          <div class="description"><%= t('courses.description') %></div>
          <p><%= @course.description %></p>
        </div>
        <div class="row with">
          <div class="description"><%= t('courses.details') %></div>
          <p><%= @course.reference %></p>
        </div>
        
        <div class="section-divider"><h3><%= t('courses.archives') %></h3></div>
        
        <table class="zebra-striped" data-sortable="true">
          <thead>
            <tr>
              <th class="blue">Type</th>
              <th class="blue">File Name</th>
              <th class="blue">File Desc.</th>
              <th class="blue">Date Uploaded</th>
            </tr>
          </thead>
          <tbody>
            <tr>
              <td>PNG</td>
              <td>sdfsdfs</td>
              <td>sdgfdfgrtg</td>
              <td>09/11/2011</td>
            </tr>
            <tr>
              <td>RTF</td>
              <td>sdgsdfg</td>
              <td>sdgdfgdfger</td>
              <td>09/13/2011</td>
            </tr>
            <tr>
              <td>PDF</td>
              <td>sadgcvdfg</td>
              <td>dsfergdg</td>
              <td>09/09/2011</td>
            </tr>
          </tbody>
        </table>
        
      </div>
      <div class="span3" style="margin:0;">
        <%= render :partial => "shared/adds" %>
      </div>
    </div>
  </div>
  <%= render :partial => "shared/footer" %>
</div>
