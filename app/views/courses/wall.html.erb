<% if current_user.view_status =="fantom"%>
<div class="container">
  <div class="content">
	<center>
<%= image_tag("suspendido.png")%>
    </center>
  </div>
</div>
<%else%>
<% if @course.status == "finish"%>
<center></br></br>
<h2>Este curso ha finalizado por seguridad no puedes acceder a su muro</h2>
<%= image_tag("lock.png")%>	
</center>
<%else%>
<div class="container">
  <div class="content">
    
    <div class="row">
      <div class="span16">
        <ul class="breadcrumb">
          <li><%= link_to("Dashboard", dashboard_path) %> <span class="divider">/</span></li>
          <li><%= link_to("Courses", courses_path) %> <span class="divider">/</span></li>
          <li><%= link_to(@course.name, course_path(@course)) %> <span class="divider">/</span></li>
          <li class="active"><%= t('courses.wall.header') %></li>
        </ul>  
      </div>
    </div>
    
    <div class="row">
      <div class="span3">
        <%= render :partial => "courses/course_menu" %>
        <%= render :partial => "courses/members_menu" %>
      </div>
      
      <div class="span10 wall">
        
        <div class="actions">
          <%= render :partial => 'comments/form',  :locals => {:commentable => @course} %>
        </div>
        <div id="course_comments">
          <div class="page">
            <%= render :partial => 'comments/comments', :locals => {:commentable => @course, :comments => @comments} %>
          </div>
        </div>
      </div>
      <div class="span3" style="margin:0;">
        <%= render :partial => "shared/adds" %>
      </div>
    </div>
    
  </div>
  <%= render :partial => "shared/footer" %>
</div>
<%end%>
<script type="text/javascript">
  $(function(){
    setupAutoScroll();
  });
</script>
<%end%>