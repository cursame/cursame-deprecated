<div class="content">
<% teachers.each do |teacher| %>
  <%if teacher.view_status == 'fantom'%>

  <%else%>
  <div class="user padding-all <%= cycle('odd', 'even') %>">
    <div class="teacher">
      <div class="row">
        <div class="span1" style="margin-left:20px;">
	       <% @teacher_id = teacher.id%>
          <%= image_tag teacher.avatar_file.xsmall.url %>
        </div>
        <div class="span5">
          <%= link_to(teacher.name, user_path(teacher)) %><br />
          <%= mail_to teacher.email %>
        </div>
        <div class="span3-5">
          <div class="teacher_aproval">
            <% if teacher.state == 'inactive'%>
              <%= form_tag supervisor_accept_user_path(teacher.id), :method => :post do |form| %>
                <%= submit_tag t('.approve'), :class => "accept btn success small" %>
              <% end %>

              <%= form_tag supervisor_reject_user_path(teacher.id), :method => :post do |form| %>
                <%= submit_tag t('.reject'), :class => "reject btn small danger" %>
              <% end %>
            <% else %>
              <div class="edit_role">
                <%= link_to "Opciones de edici칩n de usuario ", 'javascript:void(0)', :class=>"accept btn success small change_role_button" %>
               
              </div>
              <div id="edit_role_form" style="display:none;">
                <%= form_for teacher do |f|%>
                  <%= f.select :role, options_for_select([[t('.teacher'), "teacher"], [t('.student'), "student"], [t('.supervisor'), "supervisor"]])%>
                  <%= f.submit t('.update'), :class => "accept btn success small"%>
                <%end%>
                   <%= form_for teacher do |fname|%>
                       <%= fname.label :first_name %>
                       <%= fname.text_field :first_name, :class => "span4"%></br>
                       <%= fname.label :last_name %>
                       <%= fname.text_field :last_name, :class => "span4" %></br>
                       <%= fname.label :email %>
                       <%= fname.text_field :email, :class => "span4"%></br>
                      </br> <%= fname.submit "Subir Nombre", :class => "accept btn success right small"%>
                   <%end%>
                   <h3>Cambiar el status de usuario</h3>
                  <%= form_for @status do |view_status|%>
                  <%= view_status.select :view_status, options_for_select([[t('.suspender'), "fantom"], [t('.activar'), "live"]])%>
                   <%= view_status.hidden_field :user_id, :value =>  @teacher_id %>
                   <%= view_status.hidden_field :date_status, :value => Time.now %>
                  <%= view_status.submit "Cambiar status", :class => "reject btn danger"%>
               
                 <!--  <i><p> *Al suspender un usuario se cobrar치 1 USD ya que su informaci칩n quedar치 guardada en la plataforma, para que la puedas usar en un futuro. </p> </i>-->
                <%end%>
               </div>
              <% end %>
            <% end %>
          </div>
        </div>
      </div>
    </div>
  </div>
<% end %>
</div>
