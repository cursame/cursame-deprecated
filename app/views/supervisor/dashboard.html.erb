<div class="container">
  
  <div class="row">
    <div class="span16">
      <ul class="breadcrumb">
        <li><%= link_to(t('.admin'), supervisor_dashboard_path) %></li>
      </ul>  
    </div>
  </div>
  
  <div class="dashboard">  

    <div class="row">
      <div class="span5">
        <%= render :partial => "supervisor/shared/admin_menu" %>
      </div>
      
    <div class="span-two-thirds">
      <div class="dashboard-box">
        <div class="underline padding-top">
          <h2><%= t('notifications.header') %></h2>
        </div>
        <div id="notifications">
          <% @notifications.each do |notification| %>
            <div class='notification'>
              <div class="date-published"><%= time_ago_in_words(notification.created_at) %></div>
              <%= raw notification.text %>
            </div>
          <% end %>
          <%= paginate @notifications %>
        </div>
      </div>
  
    </div>
    </div>
    <!-- Contexts or Networks should be in a drop-down or the way Github does Contexts -->
  </div>
  <%= render :partial => "shared/footer"%>
</div>
