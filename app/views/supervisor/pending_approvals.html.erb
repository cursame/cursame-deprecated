<div class="container">
  
  <div class="row">
    <div class="span16">
      <ul class="breadcrumb">
        <li><%= link_to(t('.admin'), supervisor_dashboard_path) %> <span class="divider">/</span></li>
        <li><%= t('supervisor.shared.admin_menu.pending_approvals') %></li>
      </ul>  
    </div>
  </div>
  
  <div class="dashboard">  

    <div class="row">
      <div class="span5">
        <%= render :partial => "supervisor/shared/admin_menu" %>
      </div>
      
      <div class="span9">
        <h2><%= t('supervisor.shared.admin_menu.pending_approvals') %></h2>
        
        <div class="users">
          <% @pending.each do |user| %>
            <div class="user padding-all <%= cycle('odd', 'even') %>">
              <div class="row">
                <div class="span1" style="margin-left:20px;">
                  <%= image_tag user.avatar_file.xsmall.url %>
                </div>
                <div class="span5-5">
                  <%= link_to(user.name, user_path(user)) %><br />
                  <%= mail_to user.email %>
                </div>
                <div class="span3-5">
                  <div class="teacher_aproval">
                    <%= form_tag supervisor_accept_user_path(user.id), :method => :post do |form| %>
                      <%= submit_tag t('.approve'), :class => "accept btn success small" %>
                    <% end %>

                    <%= form_tag supervisor_reject_user_path(user.id), :method => :post do |form| %>
                      <%= submit_tag t('.reject'), :class => "reject btn small danger" %>
                    <% end %>
                  </div>
                </div>
              </div>
            </div>
          <% end %>
        </div>
      </div>
    </div>
    <!-- Contexts or Networks should be in a drop-down or the way Github does Contexts -->
  </div>
  <%= render :partial => "shared/footer"%>
</div>

