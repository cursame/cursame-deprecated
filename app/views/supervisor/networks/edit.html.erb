
<div class="container">
  
  <div class="row">
    <div class="span16">
      <ul class="breadcrumb">
        <li><%= link_to(t('supervisor.dashboard.admin'), supervisor_dashboard_path) %> <span class="divider">/</span></li>
        <li><%= t('supervisor.config.configuration') %></li>
      </ul>  
    </div>
  </div>

  <div class="dashboard">  

    <div class="row">
      <div class="span5">
        <%= render :partial => "supervisor/shared/admin_menu" %>
      </div>
      
      <div class="span11">
        <h2><%= t('supervisor.config.configuration') %></h2>
        <%= semantic_form_for [:supervisor, @network] do |form| %>
          <%= form.inputs :file do %>
            <li class='preview'><img src="<%= @network.logo_file.thumb.url %>"/></li>
            <%= form.input :logo_file, :as => :file, :hint => "TamaÃ±o de imagen ideal 640 x 175", :input_html => {'data-upload-path' => upload_logo_for_supervisor_network_path} %>
            <%= form.input :logo_file_cache, :as => :hidden %>
          <% end %>

          <%= form.inputs do %>
            <%= form.input :slogan, :input_html => {:class => "span6"} %>
            <%= form.input :welcome_message, :as => :text, :input_html => {:class => "span6", :rows => 6} %>
            <%= form.input :time_zone, :as => :time_zone, :input_html => {:class => "large"} %>
          <% end %>
          
          <%= form.inputs do%>
            <h3><%= t('supervisor.config.registry') %></h3>
            <%= form.input :public_registry, :as => :boolean, :wrapper_html => {:class => "boolean_li"}%>
          <% end %>
          <%= form.inputs do%>
            <%= form.input :private_registry, :as => :boolean, :wrapper_html => {:class => "boolean_li"} %>
            <%= form.input :registry_domain, :label => "", :wrapper_html => {:class => "registry_li"}, :input_html => {:class => "span3", :rows => 3, :placeholder => "#{t('.example')} gmail.com"} %>
          <%end%>
     	
           <%= form.inputs do%>
              <h3><%= t('supervisor.config.version_plataform') %></h3>  
               <%= t('supervisor.config.(_select_the_languaje_to_change_the_vesion_)') %>  </br> </br> </br>
                 <b> <%= t('supervisor.config.es => spanish school version') %>  </br>
                   <%= t('supervisor.config.cursame_en =>english school version') %>  </br>
                  <%= t('supervisor.config.es_corp => spanish corporative version') %>     </br>    </b>  
           </br>
           </br>
           </br>
           <%=  form.input :lenguajes,  :as => :select, :collection => ["es", "cursame.en", "es_corp"], :input_html => { :class => "lenguajes", :name => "lenguajes", :id => "lenguajes"} %>         
            <% end %>
          <%= form.buttons :class => "fieldset-admin" do %>
            <%= form.commit_button :label => "Guardar Cambios", :button_html => {:id => :submit, :class => 'btn right'} %>
          <% end %>
           <span class="fieldset-admin-txt"><%= link_to("Cancelar", edit_supervisor_network_path) %></span>
        <% end %>
           
          
      </div>
    </div>
  </div>
  <%= render :partial => "shared/footer"%>
</div>

