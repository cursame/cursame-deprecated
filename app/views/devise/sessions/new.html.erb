<% content_for :head do %>
  <style>
    body {
      margin-top: 80px;
    }
  </style>
<% end %>

<div class="container">
  <div class="content">
    <div class="row">
      
      <div class="span3">
        
      </div>
      
      <div class="span10" style="border:0;">
        <div class="well">
        <%= semantic_form_for resource, :as => resource_name, :url => session_path(resource_name) do |form| %>
          <%= devise_error_messages! %>
          <%= form.inputs :id => 'sign_in' do %>
            <%= form.input :email, :required => false, :input_html => {:class => "span4"} %>
            <%= form.input :password, :required => false, :input_html => {:class => "span4"} %>
            <% if devise_mapping.rememberable? %>
              <%= form.input :remember_me, :as => :boolean %>
            <% end %>
            <%= form.buttons do %>
              <%= form.commit_button :label => t('forms.sign_in_btn'), :button_html => {:class => "btn", :style => "margin-left:14px;"} %>
            <% end %>
          <% end %>
        <% end %>
        <%= render :partial => "devise/shared/links" %>
        </div>
      </div>

    </div>
  </div>
  <%= render :partial => "shared/footer" %>
</div>
