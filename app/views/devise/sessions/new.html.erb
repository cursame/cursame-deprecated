<% content_for :head do %>
  <style>
    body {
      margin-top: 100px;
    }
  </style>
<% end %>

<%= semantic_form_for resource, :as => resource_name, :url => session_path(resource_name) do |form| %>
  <%= devise_error_messages! %>
  <%= form.inputs :id => 'sign_in' do %>
    <%= form.input :email, :required => false %>
    <%= form.input :password, :required => false %>
    <% if devise_mapping.rememberable? %>
      <%= form.input :remember_me, :as => :boolean %>
    <% end %>
    <%= form.buttons do %>
      <%= form.commit_button :label => "Create" %>
    <% end %>
  <% end %>
<% end %>

<%= render :partial => "devise/shared/links" %>