<h1><%= Assignment.model_name.human(:count => :many) %></h1>

<ul id="assignments">
  <% @assignments.each do |assignment| %>
    <li>
      <%= assignment.course.name %>
      <%= link_to assignment.name, assignment %>
      <%= assignment.value %>
      <%= assignment.period %>
      <%= l assignment.due_to, :format => :short %>
    </li>
  <% end %>
</ul>
