<%= javascript_include_tag 'bootstrap-tabs' %>
<div class="container">
  <div class="content">
    
    <div class="row">
      <div class="span16">
        <ul class="breadcrumb">
          <li><%= link_to("Dashboard", dashboard_path) %> <span class="divider">/</span></li>
          <li><%= link_to("Courses", courses_path) %> <span class="divider">/</span></li>
          <li><%= link_to(@course.name, course_path(@course)) %> <span class="divider">/</span></li>
          <li class="active"><%= t('courses.assignments.assignments') %></li>
        </ul>  
      </div>
    </div>
    
    <div class="row">
      <div class="span3">
        <%= render :partial => "courses/course_menu" %>
        <%= render :partial => "courses/members_menu" %>
      </div>
      
      <div class="span10">
        
        <div class="row bottom-margin">
          <div class="span5">
            <h2><%= Assignment.model_name.human(:count => :many) %></h2>
          </div>
          <div class="span3" style="margin-left:45px;">
            <% if current_user.teacher? or current_user.supervisor?%>
              <%= link_to t('courses.assignments.create_assignment'), new_course_assignment_path(@course), :id => 'new_assignment', :class => "btn small right" %>
            <% end %>
          </div>
        </div>

        <div class="assignments">
          <ul class="tabs tabs_fix">
            <li class="active"><%= link_to t('.current'), '#current' %></li>
            <li><%= link_to t('.previous'), '#previous' %></li>
          </ul>
          <div class="pill-content">
            <div id="current" class="users teachers active">
              <%= render :partial => 'assignment', :collection => @current_assignments %>
            </div>
            <div id="previous" class="users teachers">
              <%= render :partial => 'assignment', :collection => @previous_assignments %>
            </div>
          </div>
        </div>
        
      </div>
      <div class="span3" style="margin:0;">
        <%= render :partial => "shared/adds" %>
      </div>
    </div>
    
  </div>
</div>
