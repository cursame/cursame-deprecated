<div class="container">
  <div class="content">
    
    <div class="row">
      <div class="span16">
        <ul class="breadcrumb">
          <li><%= link_to("Dashboard", dashboard_path) %> <span class="divider">/</span></li>
          <li><%= link_to("Courses", courses_path) %> <span class="divider">/</span></li>
          <li><%= link_to(@assignment.course.name, course_path(@assignment.course)) %> <span class="divider">/</span></li>
          <li><%= link_to(t('courses.assignments.assignments'), course_assignments_path(@assignment.course)) %> <span class="divider">/</span></li>
          <li class="active"><%= @assignment.name %></li>
        </ul>  
      </div>
    </div>
    
    <div class="row">
      
      <div class="span3">
        <%= render :partial => "courses/course_menu" %>
        <%= render :partial => "courses/members_menu" %>
      </div>
      
      <div class="span10 assignments">
        <div class="row bottom-margin">
          <div class="span5">
            <h2><%= Assignment.model_name.human %>: <%= @assignment.name %></h2>
          </div>
          <div class="span3" style="margin-left:70px;">
            <% if current_user.manageable_assignments.include? @assignment %>
              <%= link_to t('formtastic.actions.delete'), @assignment, :id => 'delete', :class => 'btn danger right', :style => 'margin-left:10px;', :method => :delete, :confirm => t('confirm_delete') %>
              <%= link_to t('formtastic.actions.edit'), edit_assignment_path(@assignment), :id => 'edit', :class => 'btn info right' %>
            <% else %>
              <%= link_to t('.deliver'), new_assignment_delivery_path(@assignment), :id => 'edit', :class => 'btn info right' %>
              <%= link_to t('.edit_delivery'), '#', :id => 'edit', :class => 'btn info right' %>
            <% end %>
          </div>
        </div>
        
        <h6><%= t('courses.course') %>: <%= @assignment.course.name %></h6>
        <p><%= @assignment.description %></p>
      
        <div class="row">
          <div class="assignment-values bottom-margin">
            <%= t('courses.assignments.value') %>: <b><%= @assignment.value %></b> -
            <%= t('courses.assignments.period') %>: <b><%= @assignment.period %></b> -
            <%= t('courses.assignments.date_time') %>: <b><%= l @assignment.due_to, :format => :short %></b>
          </div>
        </div>

        <%= render :partial => 'shared/assets_table', :locals => {:record => @assignment} %>
      
        <div class="actions">
          <h2><%= t('courses.assignments.comments') %></h2>
          <%= render :partial => 'comments/form', :locals => {:commentable => @assignment} %>
        </div>
        <div id="comments">
          <div class="page">
            <%= render :partial => 'comments/comments', :locals => {:commentable => @assignment, :comments => @comments} %>
          </div>
        </div>
        </div>
      
        <div class="span3" style="margin:0;">
          <%= render :partial => "shared/adds" %>
        </div>
      
    </div>
    
  </div>
</div>
