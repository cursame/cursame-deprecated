<% if current_user.view_status =="fantom"%>
<div class="container">
  <div class="content">
	<center>
<%= image_tag("suspendido.png")%>
    </center>
  </div>
</div>
<%else%>
<div class="container">
  <div class="content">
    
    <div class="row">
      <div class="span16">
        <ul class="breadcrumb">
          <li><%= link_to("Dashboard", dashboard_path) %> <span class="divider">/</span></li>
          <li class="active"><%= t('dashboard.account_settings') %></li>
        </ul>  
      </div>
    </div>
    
    <div class="row">
      <div class="span3">
        
      </div>
      <div class="span10">
        <div class="underline padding-top">
          <h2><%= t('.title') %></h2>
        </div>
      
          <h3><%= t('.change_password') %></h3>
          <%= semantic_form_for current_user, :url => password_settings_path do |form| %>
            <%= form.inputs do %>
              <%= form.input :password, :as => :password %>
              <%= form.input :password_confirmation, :as => :password %>
            <% end %>
            <%= form.buttons do %>
              <%= form.commit_button :button_html => {:id => :submit, :class => "btn", :style => "margin-left:205px;"} %>
            <% end %>
          <% end %>

          <h3><%= t('.notifications') %></h3>
          <%= semantic_form_for current_user, :url => notifications_settings_path do |form| %>
            <%= form.inputs do %>
              <%= form.input :accepting_emails, :as => :boolean, :label => t('forms.accepting_emails'), :wrapper_html => { :class => "boolean_li" }%>
            <% end %>
            <%= form.buttons do %>
              <%= form.commit_button :button_html => {:id => :submit, :class => "btn", :style => "margin-left:205px;"} %>
            <% end %>
          <% end %>
      </div>
    </div>

  </div>
  <%= render :partial => "shared/footer" %>
</div>
<%end%>