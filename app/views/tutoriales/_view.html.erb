<h1>Lista de tutoriales</h1>

<table>
  <tr>
    <th>Title</th>
    <th>Description</th>
    <th>Date</th>
    <th>Link</th>
  </tr>
<% @tutoriales.each do |tutoriale| %>	
  <tr>
    <td><%= tutoriale.title %></td>
    <td><%= tutoriale.description %></td>
    <td><%= tutoriale.date %></td>
    <td><iframe width="50" height="50" src=<%="#{tutoriale.link}" %> frameborder="0" allowfullscreen></iframe></td>
    <td><%= link_to 'Destroy', tutoriale, confirm: 'Estas seguro de eliminar el tutorial?', method: :delete, :class => "btn danger" %></td>
  </tr>
<% end %>
</table>

